#!/usr/bin/sh

bspc config border_width			2
bspc config window_gap				20
bspc config split_ratio				0.5
bspc config top_padding				20
bspc config borderless_monocle		true
bspc config gapless_monocle			true
bspc config auto_cancel				true
bspc config click_to_focus			true
#bspc config focused_border_color	\#6D878D
bspc config focused_border_color	\#777777

bspc monitor --reset-desktops 1 2 3 4 5

bspc rule --add Gimp follow=on floating=on
bspc rule --add xcalc floating=on
bspc rule --add mirage floating=on
bspc rule --add qemu floating=on

feh --bg-fill $HOME/pics/wallpaper/low_poly_mountains.jpg
xsetroot -cursor_name left_ptr
compton -b
dunst &
#$HOME/bin/status_bar/./bar &
