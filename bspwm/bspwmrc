#!/usr/bin/sh

bspc monitor --reset-desktops I II III IV V VI VII VIII IX X

bspc rule --add Gimp follow=on floating=on
bspc rule --add xcalc floating=on
bspc rule --add mirage floating=on
bspc rule --add qemu floating=on

bspc config border_width		4
bspc config window_gap			40
bspc config split_ratio			0.5
bspc config top_padding			20
bspc config borderless_monocle		true
bspc config gapless_monocle		true
bspc config auto_cancel			true
bspc config focused_border_color	\#4E9FB1

feh --bg-fill $HOME/pics/wallpaper/mountains.jpg
xsetroot -cursor_name left_ptr
#compton -bfcG -r 8 -l -5 -t -5 -D 5
bar &
