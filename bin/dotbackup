#!/bin/sh

rsync -aP --exclude 'cpanm' ~/bin/* ~/backup/dotfiles/bin

rsync -aP ~/.vim ~/backup/dotfiles

rsync -aP ~/.Xresources ~/backup/dotfiles
rsync -aP ~/.dircolors ~/backup/dotfiles
rsync -aP ~/.gitconfig ~/backup/dotfiles
rsync -aP ~/.gitignore ~/backup/dotfiles
rsync -aP ~/.ycm_extra_conf.py ~/backup/dotfiles
rsync -aP ~/.vimrc ~/backup/dotfiles
rsync -aP ~/.xinitrc ~/backup/dotfiles
rsync -aP ~/.zprofile ~/backup/dotfiles
rsync -aP ~/.zshrc ~/backup/dotfiles

rsync -aP ~/.config/i3 ~/backup/dotfiles
rsync -aP ~/.config/i3status ~/backup/dotfiles
rsync -aP ~/.config/bspwm ~/backup/dotfiles
rsync -aP ~/.config/sxhkd ~/backup/dotfiles

rsync -aP ~/src/st/src/st-0.4.1/config.h ~/backup/dotfiles
