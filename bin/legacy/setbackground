#!/usr/bin/sh

dir="${HOME}/pics/wallpaper/weather/"
#weather="$(weather 60173 | cut -d ':' -f1 | cut -d ' ' -f2)"
weather="$(weather 60173 | sed -nr 's/.*?([A-Z][a-z]+):.*/\1/p')"
echo $weather
case $weather in
	"Clear")
		feh --bg-fill ${dir}Clear.png
		;;
	"Sunny")
		feh --bg-fill ${dir}Sunny3.png
		;;
	"Rain")
		feh --bg-fill ${dir}Raining3.png
		;;
	"Snow")
		feh --bg-fill ${dir}Snowing3.png
		;;
	"Clouds")
		feh --bg-fill ${dir}Cloudy.png
		;;
	"Cloudy")
		feh --bg-fill ${dir}Cloudy.png
		;;
	*)
		feh --bg-fill ${dir}Sunny3.png
		;;
esac
