# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
	output_format	= "i3bar"
        colors		= true
	color_good	= "#6096bf"
	color_degraded	= "#ff995c"
	color_bad	= "#e33333"
        interval	= 1
}

order += "volume master"
order += "wireless wlo1"
order += "ethernet enp0s29u1u1"
order += "tztime local"

wireless wlo1 {
        format_up = "%essid - %quality"
	format_down = ""
}

ethernet enp0s29u1u1 {
        format_up = "usb"
	format_down = ""
}

volume master {
	format = "%volume"
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}

tztime local {
        format = "%Y-%m-%d %H:%M"
}
