#
# bspwm hotkeys
#

super + alt + Escape
    kill_bar
    bspc quit

super + q
    bspc window --close

super + t
    bspc desktop --layout next

super + b
    bspc desktop --balance

super + {s,f}
    bspc window --toggle {floating,fullscreen}

super + {grave,Tab}
    bspc {window,desktop} --focus last

super + apostrophe
    bspc window --swap last

super + {o,i}
    bspc control --record-history off; \
    bspc window {older,newer} --focus; \
    bspc control --record-history on

super + y
    bspc window --to-window last.manual

super + m
    bspc window --swap biggest

super + {_,shift + }{h,j,k,l}
    bspc window --{focus,swap} {left,down,up,right}

super + {_,shift + }c
    bspc window --focus {next,prev}

super + {comma,period}
    bspc desktop --circulate {backward,forward}

super + shift + semicolon
    bspc desktop --rotate 90

super + bracket{left,right}
    bspc desktop --focus {prev,next}

super + ctrl + {h,j,k,l}
    bspc window --presel {left,down,up,right}

super + ctrl + {_,shift + }space
    bspc {window --presel cancel,desktop --cancel-presel}

super + alt + {h,j,k,l}
    bspc window --edge {left -5,down +5,up -5,right +5}

super + alt + shift + {h,j,k,l}
    bspc window --edge {right -5,up +5,down -5,left +5}

super + ctrl + {1-9}
    bspc window --ratio 0.{1-9}

super + {_,shift + }{1-9,0}
    bspc {desktop --focus,window --to-desktop} ^{1-9,10}

~button1
    bspc pointer --grab focus

super + button{1-3}
    bspc pointer --grab {move,resize_side,resize_corner}

super + !button{1-3}
    bspc pointer --track %i %i

super + @button{1-3}
    bspc pointer --ungrab

#
# wm independent hotkeys
#

alt + Return
    uxterm

alt + space
    dmenu_run -b -fn 'Inconsolata-9.5' -nb '#101010' -nf '#dddddd' -sf '#F7F9FF' -sb '#5B5955'

alt + s
    search

alt + n
    network

alt + m
    playlist

alt + c
    calculator

alt + Escape
    slock

XF86AudioRaiseVolume
    amixer -q set Master 5dB+ unmute

XF86AudioLowerVolume
    amixer -q set Master 5dB- unmute

XF86AudioMute
    amixer -q set Master toggle

XF86AudioPlay
    mpc toggle

XF86AudioNext
    mpc next

XF86AudioPrev
    mpc prev

# make sxhkd reload its configuration files:
super + r
    pkill -USR1 -x sxhkd
